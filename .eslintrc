{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "parser": "babel-eslint",
  "rules": {
    "comma-dangle": [2, "never"],
    "max-len": 0,
    "new-cap": 0,
    "radix": [2, "as-needed"],
    "react/jsx-closing-bracket-location": [2, "after-props"],
    "react/jsx-no-bind": 1
  }
}